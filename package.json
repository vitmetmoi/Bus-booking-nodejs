{
	"name": "express-typescript-boilerplate",
	"version": "1.0.14",
	"description": "An Express boilerplate backend",
	"author": "Edwin Hernandez",
	"repository": "edwinhern/express-typescript-2024",
	"license": "MIT",
	"main": "index.ts",
	"private": true,
	"scripts": {
		"build": "tsc && tsup && npm run copy:public",
		"copy:public": "xcopy src\\public dist\\public /E /I /Y",
		"start": "node --import=tsx --watch src/index.ts",
		"start:prod": "node dist/index.js",
		"start:dev": "tsx watch src/index.ts",
		"lint": "biome lint --fix",
		"format": "biome format --write",
		"test": "vitest run",
		"test:cov": "vitest run --coverage",
		"check": "pnpm lint && pnpm format && pnpm build && pnpm test",
		"db:migrate": "knex migrate:latest",
		"db:migrate:rollback": "knex migrate:rollback",
		"db:seed": "knex seed:run",
		"db:setup": "tsx src/db/setup.ts"
	},
	"dependencies": {
		"@asteasolutions/zod-to-openapi": "7.3.0",
		"@types/bcrypt": "^5.0.2",
		"bcrypt": "^6.0.0",
		"cloudinary": "^2.6.1",
		"cookie-parser": "^1.4.7",
		"cors": "2.8.5",
		"dotenv": "16.5.0",
		"express": "5.1.0",
		"express-rate-limit": "7.5.0",
		"express-session": "^1.18.1",
		"helmet": "8.1.0",
		"http-status-codes": "2.3.0",
		"jsonwebtoken": "^9.0.2",
		"knex": "^3.1.0",
		"multer": "1.4.5-lts.2",
		"mysql2": "^3.14.1",
		"nodemailer": "^7.0.3",
		"passport": "^0.7.0",
		"passport-google-oauth20": "^2.0.0",
		"passport-local": "^1.0.0",
		"pino": "9.6.0",
		"pino-http": "10.4.0",
		"swagger-ui-express": "5.0.1",
		"zod": "3.24.4"
	},
	"devDependencies": {
		"@biomejs/biome": "1.9.4",
		"@mapbox/node-pre-gyp": "^2.0.0",
		"@types/cookie-parser": "^1.4.9",
		"@types/cors": "2.8.17",
		"@types/express": "5.0.1",
		"@types/express-session": "^1.18.1",
		"@types/jsonwebtoken": "^9.0.9",
		"@types/multer": "^1.4.12",
		"@types/node": "^22.15.17",
		"@types/nodemailer": "^6.4.17",
		"@types/passport": "^1.0.17",
		"@types/passport-google-oauth20": "^2.0.16",
		"@types/passport-local": "^1.0.38",
		"@types/supertest": "6.0.3",
		"@types/swagger-ui-express": "4.1.8",
		"@vitest/coverage-v8": "3.1.3",
		"node-pre-gyp": "^0.17.0",
		"pino-pretty": "13.0.0",
		"supertest": "7.1.0",
		"ts-node-dev": "^2.0.0",
		"tsup": "8.4.0",
		"tsx": "4.19.4",
		"typescript": "5.8.3",
		"vite-tsconfig-paths": "5.1.4",
		"vitest": "3.1.3"
	},
	"tsup": {
		"entry": [
			"src/index.ts"
		],
		"outDir": "dist",
		"format": [
			"esm",
			"cjs"
		],
		"target": "es2020",
		"sourcemap": true,
		"clean": true,
		"dts": true,
		"splitting": false,
		"skipNodeModulesBundle": true
	},
	"packageManager": "pnpm@10.10.0"
}